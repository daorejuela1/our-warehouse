<h1 class="display-3 text-center">Items in <%= @box.name %></h1>
<div class="d-flex justify-content-center">
  <%= link_to("Add Item", new_box_item_path(@box), class: "form-inline btn btn-info mx-2")%>
</div>
<%= pagy_bootstrap_nav(@pagy).html_safe %>
<div class="row row-cols-1 row-cols-md-2 g-4" >
  <% @items.each  do |item|%>
    <%= render "items/item", item: item %>
  <% end %>
</div>
<%= pagy_bootstrap_nav(@pagy).html_safe %>
